<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t :new_request, :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>
<%= simple_form_for @product, url: group_products_path(group_id: @product.group_id), :html => { :class => 'form-horizontal' } do |f| %>
  <%= render :partial => 'form', locals: { f: f, product: @product } %>
<% end %>
