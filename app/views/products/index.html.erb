<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t :requests, :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:number) %></th>
        <th><%= model_class.human_attribute_name(:state) %></th>
        <th><%= model_class.human_attribute_name(:note) %></th>
        <th><%= model_class.human_attribute_name(:price) %></th>
        <th><%= model_class.human_attribute_name(:due_date) %></th>
        <th><%=t :action, :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @user.products.each do |product| %>
        <tr>
          <td><%= link_to product.id, user_product_path(id: product.id, user_id: product.user_id) %></td>
          <td><%= product.name %></td>
          <td><%= product.number %></td>
          <td><%= product.state_i18n %></td>
          <td><%= product.note %></td>
          <td><%= product.price %></td>
          <td><%= product.due_date %></td>
          <td>
            <%= link_to t(:show, :default => t("helpers.links.show")),
                        user_product_path(id: product.id, user_id: product.user_id), :class => 'btn btn-default btn-xs' %>
            <%= link_to t(:edit, :default => t("helpers.links.edit")),
                        edit_user_product_path(id: product.id, user_id: product.user_id), :class => 'btn btn-default btn-xs' %>
            <%= link_to t(:destroy, :default => t("helpers.links.destroy")),
                        user_product_path(id: product.id, user_id: product.user_id),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to t(:new, :default => t("helpers.links.new")),
            new_user_product_path(user_id: @user.id),
            :class => 'btn btn-primary' %>
