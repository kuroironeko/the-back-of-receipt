<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t :show, :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @product.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @product.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @product.state_i18n %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @product.note %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @product.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:due_date) %>:</strong></dt>
  <dd><%= @product.due_date %></dd>
</dl>

<%= link_to t(:back, :default => t("helpers.links.back")),
              group_products_path(group_id: @product.group_id), :class => 'btn btn-default'  %>
<%= link_to t(:edit, :default => t("helpers.links.edit")),
              edit_group_product_path(id: @product.id, group_id: @product.group_id), :class => 'btn btn-default' %>
<%= link_to t(:destroy, :default => t("helpers.links.destroy")),
              group_product_path(id: @product.id, group_id: @product.group_id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
