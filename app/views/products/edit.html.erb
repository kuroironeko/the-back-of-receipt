<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t :edit, :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>
<%= simple_form_for @product, url: group_product_path(id: @product.id, group_id: @product.group_id), :html => { :class => 'form-horizontal' } do |f| %>
  <%= render :partial => 'form', locals: { f: f, product: @product } %>
<% end %>
