<p id="notice"><%= notice %></p>

<h1>Products Indices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products_indices.each do |products_index| %>
      <tr>
        <td><%= products_index.name %></td>
        <td><%= link_to 'Show', products_index %></td>
        <td><%= link_to 'Edit', edit_products_index_path(products_index) %></td>
        <td><%= link_to 'Destroy', products_index, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

